<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COVIDVaccinationStatus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:fontFamily">@font/caudex_bold</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="listActivity">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detailActivity">
        <item name="android:textColor">@color/black</item>
        <item name="android:progressTint">@color/black</item>
    </style>
    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:homeAsUpIndicator">@color/black</item>
    </style>
</resources>